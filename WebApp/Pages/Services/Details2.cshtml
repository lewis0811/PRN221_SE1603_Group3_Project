@page
@model WebApp.Pages.Services.Details2Model
@{
}
<div class="container">
    <div class=" main-section bg-white">

        <div class="row m-0">
            <div class="col-lg-4 ">
                <img src="@Model.Service.ImgUrl" class="border" width="100%">
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>@Model.Service.Name</h4>
                        </div>
                        <hr />
                        <div class="col-lg-12 pt-2">
                            <h5>Chi tiết</h5>
                            <span>
                                @Model.Service.Description
                            </span>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Chọn cửa hàng</h5>
                            <select class="form-control" asp-for="@Model.StoreService.LaundryStoreId">
                                <option selected disabled>-- Chọn cửa hàng --</option>
                                @foreach(var item in Model.LaundryStores)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <h6>Số lượng :</h6>
                            <input type="number" class="form-control text-center w-100" value="1" min="1" max="5">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a href="#" class="btn btn-danger w-100">Add To Cart</a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="#" class="btn btn-success w-100">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
</div>