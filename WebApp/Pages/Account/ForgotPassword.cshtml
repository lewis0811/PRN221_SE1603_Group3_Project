@page
@model WebApp.Pages.Account.ForgotPasswordModel
@{
}

<h1 class="text-info">Forgot your password? </h1>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-page="/Account/ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" >
                <h4>Enter your email</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="model.Email" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="model.Email" class="form-control" />
                        <span asp-validation-for="model.Email" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group p-2">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}