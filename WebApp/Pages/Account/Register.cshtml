@page
@model WebApp.Pages.Account.RegisterModel

<h1 class="text-info">Register</h1>

<form method="post">
    <h4>Create a new account</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RegisterViewModel.Email"></label>
        <div class="col-md-10">
            <input asp-for="RegisterViewModel.Email" class="form-control" />
            @* <span asp-validation-for="Email"></span> *@
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RegisterViewModel.Name"></label>
        <div class="col-md-10">
            <input asp-for="RegisterViewModel.Name" class="form-control" />
            @* <span asp-validation-for="Name"></span> *@
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RegisterViewModel.Password"></label>
        <div class="col-md-10">
            <input asp-for="RegisterViewModel.Password" class="form-control" />
            @* <span asp-validation-for="Password"></span> *@
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RegisterViewModel.ConfirmPassword"></label>
        <div class="col-md-10">
            <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control" />
            @* <span asp-validation-for="ConfirmPassword"></span> *@
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RegisterViewModel.RoleSelected"></label>
        <div class="col-md-10">
            <select class="form-select " asp-for="RegisterViewModel.RoleSelected" asp-items="@Model.RegisterViewModel.RoleList">
                <option disabled selected>--Select Role--</option>
            </select>
            @* <span asp-validation-for="ConfirmPassword"></span> *@
        </div>
    </div>

    <hr />
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Register</button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
