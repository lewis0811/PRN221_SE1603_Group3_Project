                <option disabled selected>--Select Role--</option>
            </select>
            @* <span asp-validation-for="ConfirmPassword"></span> 
        </div>
    </div> *@

    <hr />
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Register</button>
        </div>
    </div>
</form>

