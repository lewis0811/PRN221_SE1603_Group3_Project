@page
@using Domain.Enums;
@model WebApp.Pages.Staff_Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.Id" />

            <input type="hidden" asp-for="Staff.ApplicationUserId" value="@Model.Staff.ApplicationUserId" />
            <input type="hidden" asp-for="Staff.ApplicationUser.Email" value="@Model.Staff.ApplicationUser.Email" />
            <input type="hidden" asp-for="Staff.JobPosition" value="@Model.Staff.JobPosition" />

            <div class="form-group">
                <label asp-for="Staff.Name" class="control-label"></label>
                <input asp-for="Staff.Name" class="form-control" />
                <span asp-validation-for="Staff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Age" class="control-label"></label>
                <input asp-for="Staff.Age" class="form-control" />
                <span asp-validation-for="Staff.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Address" class="control-label"></label>
                <input asp-for="Staff.Address" class="form-control" />
                <span asp-validation-for="Staff.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
