@page
@model WebApp.Pages.StoreService_Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StoreService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreService.ServiceId" class="control-label"> Service</label>
                <select asp-for="StoreService.ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            @if(Model.LaundryStore != null)
            {
                <input type="hidden" asp-for="StoreService.LaundryStoreId" value="@Model.LaundryStore.Id" />
            } else
            {
                <div class="form-group">
                    <label asp-for="StoreService.LaundryStoreId" class="control-label">Laundry Store</label>
                    <select asp-for="StoreService.LaundryStoreId" class="form-control" asp-items="ViewBag.LaundryStoreId"></select>
                </div>
            }

            <div class="form-group">
                <label asp-for="StoreService.Weight" class="control-label">Weight (Optional)</label>
                <input asp-for="StoreService.Weight" class="form-control" />
                <span asp-validation-for="StoreService.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreService.UnitPrice" class="control-label"></label>
                <input asp-for="StoreService.UnitPrice" class="form-control" />
                <span asp-validation-for="StoreService.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
